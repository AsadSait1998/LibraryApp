<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LibraryApp.Pages.LoansPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Loans">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="10">
            <Label Text="Loan Transactions" FontSize="20" />

            <Label Text="Select Member" />
            <Picker x:Name="MemberPicker" ItemDisplayBinding="{Binding Name}" />

            <Label Text="Select Book" />
            <Picker x:Name="BookPicker" ItemDisplayBinding="{Binding Title}" />

            <HorizontalStackLayout Spacing="8">
                <Button Text="Borrow" Clicked="OnBorrow" />
                <Button Text="Return Selected Loan" Clicked="OnReturn" />
            </HorizontalStackLayout>

            <Label Text="Active Loans" FontSize="18" Margin="0,16,0,0" />
            <CollectionView x:Name="ActiveLoans" HeightRequest="250" SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto,*,Auto">
                            <Label Text="{Binding LoanId}" />
                            <Label Grid.Column="1" Text="{Binding BorrowDate}" />
                            <Label Grid.Column="2" Text="{Binding BookId}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label x:Name="Message" TextColor="Red" IsVisible="False" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
