<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="LibraryApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:LibraryApp.Pages">

    <!-- Initial page: Login -->
    <ShellContent
        Title="Login"
        Route="LoginPage"
        ContentTemplate="{DataTemplate pages:LoginPage}" />

    <!-- Other pages are routable targets (not shown in flyout) -->
    <ShellContent
        Title="Dashboard"
        Route="DashboardPage"
        ContentTemplate="{DataTemplate pages:DashboardPage}"
        FlyoutItemIsVisible="False" />
    <ShellContent
        Title="Books"
        Route="BooksPage"
        ContentTemplate="{DataTemplate pages:BooksPage}"
        FlyoutItemIsVisible="False" />
    <ShellContent
        Title="Members"
        Route="MembersPage"
        ContentTemplate="{DataTemplate pages:MembersPage}"
        FlyoutItemIsVisible="False" />
    <ShellContent
        Title="Loans"
        Route="LoansPage"
        ContentTemplate="{DataTemplate pages:LoansPage}"
        FlyoutItemIsVisible="False" />
</Shell>
